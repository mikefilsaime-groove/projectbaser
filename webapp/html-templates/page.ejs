    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            /* ShadCN Violet Theme - Light & Clean */
            --center-channel-bg-rgb: 255, 255, 255;
            --center-channel-color-rgb: 9, 9, 11;
            --sidebar-bg-rgb: 255, 255, 255;
            --sidebar-text-rgb: 9, 9, 11;
            --button-color-rgb: 247, 250, 252;
            --button-bg-rgb: 124, 58, 237;
            --button-danger-color-rgb: 247, 250, 252;
