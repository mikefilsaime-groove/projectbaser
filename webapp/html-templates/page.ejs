            --accent-rgb: 124, 58, 237;
            --link-visited-color-rgb: #551a8b;
            --prop-default: #fff;
            --prop-gray: #f4f4f5;
            --prop-brown: #fef3c7;
            --prop-orange: #fed7aa;
            --prop-yellow: #fef08a;
